            `).join('');
        }

        // ì„±ê²½êµ¬ì ˆ ì½˜í…ì¸  ë¡œë“œ (ë”ë¯¸)
        function loadVersesContent(keyword) {
            const container = document.getElementById('versesList');
            const verses = [
